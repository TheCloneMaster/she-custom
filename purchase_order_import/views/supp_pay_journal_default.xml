<?xml version="1.0"?>
<openerp>
    <data>
        <record id="supp_pay_journal_default_tree" model="ir.ui.view">
            <field name="name">supp.pay.jouranl.defaul.tree</field>
            <field name="model">supp.pay.journal.default</field>
            <field name="arch" type="xml">
                 <tree string="Default Tree" editable="bottom" delete="true">
                    <field name="currency_id"/> 
                    <field name="journal_id" domain="['|',('type','=','cash'),('type','=','bank')]"/>
                 </tree>
            </field>
        </record>

        <record id='supp_pay_journal_default_action' model='ir.actions.act_window'>
            <field name='name'>Supplier Payment Journal Defaults</field>
            <field name='res_model'>supp.pay.journal.default</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree</field>
        </record>
        
        <menuitem id="supp_pay_journal_default_menu" name="Supplier Payment Journal Defaults" parent="base_import_log.import_data_config"
                action="supp_pay_journal_default_action" sequence="10"/>
    </data>
</openerp>
