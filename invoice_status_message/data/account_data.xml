<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!-- Account-related subtypes for messaging / Chatter -->
        <record id="mt_invoice_draft" model="mail.message.subtype">
            <field name="name">Draft Invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="default" eval="True"/>
        </record>
        <record id="mt_invoice_proforma" model="mail.message.subtype">
            <field name="name">Pro-forma Invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="default" eval="True"/>
        </record>
        <record id="mt_invoice_open" model="mail.message.subtype">
            <field name="name">Invoice Validated</field>
            <field name="res_model">account.invoice</field>
            <field name="default" eval="True"/>
        </record>
        <record id="mt_invoice_paid" model="mail.message.subtype">
            <field name="name">Invoice Paid</field>
            <field name="res_model">account.invoice</field>
            <field name="default" eval="True"/>
        </record>
        <record id="mt_invoice_cancel" model="mail.message.subtype">
            <field name="name">Invoice Cancelled</field>
            <field name="res_model">account.invoice</field>
            <field name="default" eval="True"/>
        </record>

    </data>
</openerp>
