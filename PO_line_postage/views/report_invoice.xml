<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_invoice_document_postage" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='page']/table[@class='table table-condensed']/thead/tr/th" position="replace">
            <th>Product</th>
        </xpath>
        <xpath expr="//div[@class='page']/table[@class='table table-condensed']/tbody[@class='invoice_tbody']/tr[@t-foreach='o.invoice_line']/td" position="replace">
            <td><span t-field="l.product_id"/></td>
        </xpath>

	<xpath expr="//div[@class='page']/table[@class='table table-condensed']/thead/tr/th[@class='text-right']" position="after">
	    <th class="text-right">Postage</th>
	</xpath>
	<xpath expr="//div[@class='page']/table[@class='table table-condensed']/tbody[@class='invoice_tbody']/tr[@t-foreach='o.invoice_line']/td[@class='text-right']" position="after">
            <td class="text-right">
                <span t-field="l.postage"/>
            </td>
        </xpath>
</template>
</data>
</openerp>


